<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="view.LoginMenuController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextField fx:id="textField" promptText="Password" visible="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <CheckBox fx:id="showPasswordCheckBox" text="Show Password" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>

    <Button text="Login" onAction="#handleLoginButtonAction" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

    <Button text="Forgot Password" onAction="#handleForgotPasswordButtonAction" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

    <Button text="Register" onAction="#handleRegisterButtonAction" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
</GridPane>
