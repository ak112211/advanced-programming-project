<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LobbyController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <Label fx:id="waitingLabel" text="Waiting for the other player to choose their deck..."/>
        <ProgressIndicator fx:id="progressIndicator"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
    </VBox>
</AnchorPane>
