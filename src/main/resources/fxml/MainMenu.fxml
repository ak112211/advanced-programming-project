<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainMenuController" prefWidth="1000" prefHeight="600">
    <ScrollPane fitToWidth="true" fitToHeight="true">
        <VBox spacing="10" alignment="TOP_CENTER">

            <HBox spacing="10" alignment="CENTER">
                <Label text="Gwent Main Menu" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Show Scoreboard" onAction="#showScoreboard" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Profile" onAction="#goToProfile" />
                <Button text="Add Friends" onAction="#goToAddFriends" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <CheckBox fx:id="multiplayerCheckBox" text="Multiplayer" onAction="#toggleMultiplayer" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Faction:" />
                <ComboBox fx:id="factionComboBox" />
                <Label text="Leader:" />
                <ComboBox fx:id="leaderComboBox" />
            </HBox>
            <HBox fx:id="friendsMenu" spacing="10" alignment="CENTER">
                <Label text="Friends Menu:" />
                <VBox spacing="10" visible="false">
                    <Label text="Choose a friend to play with:" />
                    <ListView fx:id="friendsListView" prefHeight="200" prefWidth="300" />
                    <Button text="Send Play Request" onAction="#sendPlayRequest" />
                </VBox>
            </HBox>
            <HBox fx:id="savedGamesMenu" spacing="10" alignment="CENTER">
                <Label text="Saved Games Menu:" />
                <VBox spacing="10" visible="false">
                    <Label text="Choose a saved game to continue:" />
                    <ListView fx:id="savedGamesListView" prefHeight="200" prefWidth="300" />
                    <Button fx:id="continueButton" text="Continue Game" onAction="#startGame" />
                </VBox>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="Faction Cards:" />
                    <ListView fx:id="factionCardsListView" prefHeight="400" prefWidth="300" />
                </VBox>
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="Deck Cards:" />
                    <ListView fx:id="deckCardsListView" prefHeight="400" prefWidth="300" />
                </VBox>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="unitCardsLabel" text="Unit Cards: 0" />
                <Label fx:id="specialCardsLabel" text="Special Cards: 0" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="startGameButton" onAction="#startGame" text="Start Game" disable="true" />
                <Button text="Upload Deck" onAction="#uploadDeck" />
                <Button text="Download Deck" onAction="#downloadDeck" />
                <Button fx:id="choosePlayer2DeckButton" text="Change turn" onAction="#changeTurn" disable="true" />
            </HBox>
        </VBox>
    </ScrollPane>
    <VBox fx:id="cardDisplayVBox" maxWidth="200" maxHeight="400" alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10; -fx-background-color: #000000" visible="false">
        <ImageView fx:id="cardImageView" fitWidth="200" fitHeight="400" preserveRatio="true" />
        <Text fx:id="cardDescriptionText" wrappingWidth="200" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER" />
    </VBox>
</StackPane>
