<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChooseNameController" styleClass="logicPage">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Player 2 Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Button text="Submit" onAction="#handleSubmitButtonAction" GridPane.rowIndex="1"
            GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
    <Button text="Back" onAction="#handleBack" GridPane.rowIndex="5" GridPane.columnIndex="1"
            GridPane.halignment="LEFT"/>
</GridPane>