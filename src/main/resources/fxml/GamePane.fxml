            <Font size="16.0"/>
        </font>
    </Text>
    <Text fx:id="player1RangedTotalScore" layoutX="338.0" layoutY="423.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="0" textAlignment="CENTER" wrappingWidth="39.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Text>
