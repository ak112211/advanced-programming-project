<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="gamePane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GamePaneController">
    <ImageView fx:id="background" fitHeight="720" fitWidth="1280" pickOnBounds="true" preserveRatio="true">
        <Image url="@../gwentImages/img/board.jpg" />
    </ImageView>

    <Label fx:id="player1NameLabel" layoutX="10" layoutY="10" style="-fx-font-size: 18; -fx-text-fill: white;" />
    <Label fx:id="player2NameLabel" layoutX="1100" layoutY="10" style="-fx-font-size: 18; -fx-text-fill: white;" />
    <Label fx:id="player1ScoreLabel" layoutX="10" layoutY="30" style="-fx-font-size: 18; -fx-text-fill: white;" />
    <Label fx:id="player2ScoreLabel" layoutX="1100" layoutY="30" style="-fx-font-size: 18; -fx-text-fill: white;" />

    <HBox fx:id="player1CloseCombat" alignment="CENTER" layoutX="469.0" layoutY="289.0" prefHeight="79" prefWidth="546.0" spacing="3" />
    <HBox fx:id="player2CloseCombat" alignment="CENTER" layoutX="469.0" layoutY="190.0" prefHeight="79" prefWidth="546.0" spacing="3" />

    <HBox fx:id="player1Ranged" alignment="CENTER" layoutX="469.0" layoutY="378.0" prefHeight="79" prefWidth="546.0" spacing="3" />
    <HBox fx:id="player2Ranged" alignment="CENTER" layoutX="469.0" layoutY="99.0" prefHeight="79" prefWidth="546.0" spacing="3" />

    <HBox fx:id="player1Siege" alignment="CENTER" layoutX="469.0" layoutY="469.0" prefHeight="79" prefWidth="546.0" spacing="3" />
    <HBox fx:id="player2Siege" alignment="CENTER" layoutX="469.0" layoutY="11.0" prefHeight="79" prefWidth="546.0" spacing="3" />

    <HBox fx:id="weather" alignment="CENTER" layoutX="94.0" layoutY="306.0" prefHeight="79" prefWidth="185.0" spacing="3" />

    <HBox fx:id="player1SiegeSpell" alignment="CENTER" layoutX="377.0" layoutY="469.0" prefHeight="79" prefWidth="92.0" spacing="3" />
    <HBox fx:id="player1RangedSpell" alignment="CENTER" layoutX="377.0" layoutY="378.0" prefHeight="79" prefWidth="92.0" spacing="3" />
    <HBox fx:id="player1CloseCombatSpell" alignment="CENTER" layoutX="377.0" layoutY="289.0" prefHeight="79" prefWidth="92.0" spacing="3" />
    <HBox fx:id="player2CloseCombatSpell" alignment="CENTER" layoutX="377.0" layoutY="190.0" prefHeight="79" prefWidth="92.0" spacing="3" />
    <HBox fx:id="player2RangedSpell" alignment="CENTER" layoutX="377.0" layoutY="99.0" prefHeight="79" prefWidth="92.0" spacing="3" />
    <HBox fx:id="player2SiegeSpell" alignment="CENTER" layoutX="377.0" layoutY="11.0" prefHeight="79" prefWidth="92.0" spacing="3" />

    <HBox fx:id="player1Hand" alignment="CENTER" layoutX="385" layoutY="564" prefHeight="79" prefWidth="623" spacing="3" />
    <HBox fx:id="player2Hand" alignment="CENTER" layoutX="385" layoutY="-25" prefHeight="79" prefWidth="623" spacing="3" />

    <StackPane fx:id="player2Leader" layoutX="92.0" layoutY="53.0" prefHeight="90.0" prefWidth="68.0" />
    <StackPane fx:id="player1Leader" layoutX="92.0" layoutY="555.0" prefHeight="90.0" prefWidth="68.0" />

    <StackPane fx:id="player1Graveyard" alignment="BOTTOM_LEFT" layoutX="1018.0" layoutY="536.0" prefHeight="111.0" prefWidth="82.0" />
    <StackPane fx:id="player2Graveyard" alignment="BOTTOM_LEFT" layoutX="1018.0" layoutY="30.0" prefHeight="111.0" prefWidth="82.0" />

    <VBox fx:id="player1Score" alignment="CENTER" layoutX="10" layoutY="400" spacing="3" />
    <VBox fx:id="player2Score" alignment="CENTER" layoutX="1150" layoutY="400" spacing="3" />

    <Pane fx:id="overlayPane" prefHeight="720" prefWidth="1280" style="-fx-background-color: rgba(0, 0, 0, 0.3);" visible="false" />
    <Label fx:id="overlayMessage" style="-fx-font-size: 36; -fx-text-fill: black; -fx-background-color: white" visible="false" />
    <VBox fx:id="cardDisplayVBox" alignment="CENTER" layoutX="1025.0" layoutY="150.0" maxHeight="412.0" maxWidth="207.0" prefHeight="386.0" prefWidth="207.0" spacing="10" styleClass="overlay" visible="false">
        <ImageView fx:id="cardImageView" fitHeight="340" fitWidth="150" preserveRatio="true" />
        <Text fx:id="cardDescriptionText" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER" wrappingWidth="170" />
        <Text fx:id="cardNumText" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER" wrappingWidth="170" />
    </VBox>
    <VBox fx:id="chooseDisplayVBox" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" visible="false">
        <HBox alignment="CENTER" spacing="10">
         <Button mnemonicParsing="false" onAction="#handlePreviousCard" text="◄" />
            <ImageView fx:id="chooseImageView" fitHeight="340" fitWidth="150" preserveRatio="true" />
         <Button mnemonicParsing="false" onAction="#handleNextCard" text="►" />
        </HBox>
        <Text fx:id="chooseDescriptionText" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER" wrappingWidth="170" />
        <Button fx:id="passButton" mnemonicParsing="false" onAction="#passChoose" text="pass" />
    </VBox>
    <VBox fx:id="pauseMenu" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" visible="false">
        <Button fx:id="exit" onAction="#handleEndGameWithoutSaving" text="End Game Without Saving" />
        <Button fx:id="exitSave" onAction="#handleSaveGameAndExit" text="Save Game and Exit" />
        <Button fx:id="quit" onAction="#handleQuit" text="Quit" />
        <Button onAction="#handleToggleSound" text="Turn Sound On/Off" />
    </VBox>

</Pane>
