<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="gamePane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GamePaneController">
    <ImageView fx:id="background" fitHeight="720" fitWidth="1280" pickOnBounds="true" preserveRatio="true">
        <Image url="@../gwentImages/img/board.jpg"/>
    </ImageView>

    <Label fx:id="player1NameLabel" layoutX="10" layoutY="10" style="-fx-font-size: 18; -fx-text-fill: white;"/>
    <Label fx:id="player2NameLabel" layoutX="1100" layoutY="10" style="-fx-font-size: 18; -fx-text-fill: white;"/>
    <Label fx:id="player1ScoreLabel" layoutX="10" layoutY="30" style="-fx-font-size: 18; -fx-text-fill: white;"/>
    <Label fx:id="player2ScoreLabel" layoutX="1100" layoutY="30" style="-fx-font-size: 18; -fx-text-fill: white;"/>

    <HBox fx:id="player1CloseCombat" alignment="CENTER" layoutX="469.0" layoutY="289.0" prefHeight="79"
          prefWidth="546.0" spacing="3"/>
    <HBox fx:id="player2CloseCombat" alignment="CENTER" layoutX="469.0" layoutY="190.0" prefHeight="79"
          prefWidth="546.0" spacing="3"/>

    <HBox fx:id="player1Ranged" alignment="CENTER" layoutX="469.0" layoutY="378.0" prefHeight="79" prefWidth="546.0"
          spacing="3"/>
    <HBox fx:id="player2Ranged" alignment="CENTER" layoutX="469.0" layoutY="99.0" prefHeight="79" prefWidth="546.0"
