    <HBox fx:id="player1Siege" alignment="CENTER" layoutX="469.0" layoutY="469.0" prefHeight="79" prefWidth="546.0"
          spacing="3"/>
    <HBox fx:id="player2Siege" alignment="CENTER" layoutX="469.0" layoutY="11.0" prefHeight="79" prefWidth="546.0"
          spacing="3"/>

    <HBox fx:id="weather" alignment="CENTER" layoutX="94.0" layoutY="306.0" prefHeight="79" prefWidth="185.0"
          spacing="3"/>

    <HBox fx:id="player1SiegeSpell" alignment="CENTER" layoutX="377.0" layoutY="469.0" prefHeight="79" prefWidth="92.0"
          spacing="3"/>
    <HBox fx:id="player1RangedSpell" alignment="CENTER" layoutX="377.0" layoutY="378.0" prefHeight="79" prefWidth="92.0"
          spacing="3"/>
    <HBox fx:id="player1CloseCombatSpell" alignment="CENTER" layoutX="377.0" layoutY="289.0" prefHeight="79"
          prefWidth="92.0" spacing="3"/>
    <HBox fx:id="player2CloseCombatSpell" alignment="CENTER" layoutX="377.0" layoutY="190.0" prefHeight="79"
          prefWidth="92.0" spacing="3"/>
    <HBox fx:id="player2RangedSpell" alignment="CENTER" layoutX="377.0" layoutY="99.0" prefHeight="79" prefWidth="92.0"
          spacing="3"/>
    <HBox fx:id="player2SiegeSpell" alignment="CENTER" layoutX="377.0" layoutY="11.0" prefHeight="79" prefWidth="92.0"
          spacing="3"/>

    <HBox fx:id="player1Hand" alignment="CENTER" layoutX="385" layoutY="564" prefHeight="79" prefWidth="623"
          spacing="3"/>
    <HBox fx:id="player2Hand" alignment="CENTER" layoutX="385" layoutY="-25" prefHeight="79" prefWidth="623"
          spacing="3"/>

    <StackPane fx:id="player2Leader" layoutX="92.0" layoutY="53.0" prefHeight="90.0" prefWidth="68.0"/>
    <StackPane fx:id="player1Leader" layoutX="92.0" layoutY="555.0" prefHeight="90.0" prefWidth="68.0"/>

    <StackPane fx:id="player1Graveyard" alignment="BOTTOM_LEFT" layoutX="1018.0" layoutY="536.0" prefHeight="111.0"
               prefWidth="82.0"/>
    <StackPane fx:id="player2Graveyard" alignment="BOTTOM_LEFT" layoutX="1018.0" layoutY="30.0" prefHeight="111.0"
               prefWidth="82.0"/>

    <VBox fx:id="player1Score" alignment="CENTER" layoutX="10" layoutY="400" spacing="3"/>
    <VBox fx:id="player2Score" alignment="CENTER" layoutX="1150" layoutY="400" spacing="3"/>

    <Text fx:id="player1TotalScore" layoutX="283.0" layoutY="496.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
          textAlignment="CENTER" wrappingWidth="39.0">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <Text fx:id="player2TotalScore" layoutX="282.0" layoutY="227.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
          textAlignment="CENTER" wrappingWidth="39.5">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <Text fx:id="player1SiegeTotalScore" layoutX="338.0" layoutY="513.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
          textAlignment="CENTER" wrappingWidth="39.0">
