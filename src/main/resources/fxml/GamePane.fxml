          text="0" textAlignment="CENTER" wrappingWidth="39.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Text>
    <Text fx:id="player2CloseCombatTotalScore" layoutX="338.0" layoutY="234.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="0" textAlignment="CENTER" wrappingWidth="39.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Text>
    <Text fx:id="player2RangedTotalScore" layoutX="338.0" layoutY="143.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="0" textAlignment="CENTER" wrappingWidth="39.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Text>
    <Text fx:id="player2SiegeTotalScore" layoutX="338.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
          textAlignment="CENTER" wrappingWidth="39.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Text>

    <Pane fx:id="overlayPane" prefHeight="720" prefWidth="1280" style="-fx-background-color: rgba(0, 0, 0, 0.3);"
          visible="false"/>
    <Label fx:id="overlayMessage" style="-fx-font-size: 36; -fx-text-fill: black; -fx-background-color: white"
           visible="false"/>
    <VBox fx:id="cardDisplayVBox" alignment="CENTER" layoutX="1025.0" layoutY="150.0" maxHeight="412.0" maxWidth="207.0"
          prefHeight="386.0" prefWidth="207.0" spacing="10" styleClass="overlay" visible="false">
        <ImageView fx:id="cardImageView" fitHeight="340" fitWidth="150" preserveRatio="true"/>
        <Text fx:id="cardDescriptionText" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER"
              wrappingWidth="170"/>
        <Text fx:id="cardNumText" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER"
              wrappingWidth="170"/>
    </VBox>
    <VBox fx:id="chooseDisplayVBox" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10"
          visible="false">
        <HBox alignment="CENTER" spacing="10">
            <Button mnemonicParsing="false" onAction="#handlePreviousCard" text="◄"/>
            <ImageView fx:id="chooseImageView" fitHeight="340" fitWidth="150" preserveRatio="true"/>
            <Button mnemonicParsing="false" onAction="#handleNextCard" text="►"/>
        </HBox>
        <Text fx:id="chooseDescriptionText" style="-fx-padding: 10; -fx-fill: #ffffff;" textAlignment="CENTER"
              wrappingWidth="170"/>
        <Button fx:id="passButton" mnemonicParsing="false" onAction="#passChoose" text="pass"/>
    </VBox>
    <VBox fx:id="pauseMenu" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" visible="false">
        <Button fx:id="exit" onAction="#handleEndGameWithoutSaving" text="End Game Without Saving"/>
        <Button fx:id="exitSave" onAction="#handleSaveGameAndExit" text="Save Game and Exit"/>
        <Button fx:id="quit" onAction="#handleQuit" text="Quit"/>
        <Button fx:id="makePublic" onAction="#handleMakePublic" text="Make public"/>
        <Button onAction="#handleToggleSound" text="Turn Sound On/Off"/>
    </VBox>
</Pane>
