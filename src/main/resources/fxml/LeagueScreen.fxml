<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LeagueScreenController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" layoutX="100" layoutY="50">
        <Label text="League Name:"/>
        <TextField fx:id="leagueNameField"/>
        <Label text="Players:"/>
        <ListView fx:id="playersListView"/>
        <Button text="Add Player" onAction="#handleAddPlayer"/>
        <Button text="Start Quarter Finals" onAction="#handleStartQuarterFinals"/>
        <Button text="Start Semi Finals" onAction="#handleStartSemiFinals"/>
        <Button text="Start Finals" onAction="#handleStartFinals"/>
        <Button text="Declare Winner" onAction="#handleDeclareWinner"/>
        <Label text="Winner:"/>
        <Label fx:id="winnerLabel"/>
    </VBox>
</AnchorPane>
