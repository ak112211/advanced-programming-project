<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AddFriendsController" spacing="10" alignment="TOP_CENTER">
    <HBox spacing="10" alignment="CENTER">
        <Label text="Add Friends" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter friend's username" />
        <Button text="Add Friend" onAction="#addFriend" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Friends List:" />
        <ListView fx:id="friendsListView" prefHeight="300" prefWidth="200" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Back to Main Menu" onAction="#goBackToMainMenu" />
    </HBox>
</VBox>
