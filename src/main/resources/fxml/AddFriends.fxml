<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="view.AddFriendsController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="100.0" layoutY="50.0">
            <Label text="Add Friends" style="-fx-font-size: 20px;"/>
            <TextField fx:id="friendUsernameField" promptText="Enter friend's username"/>
            <Button text="Add Friend" onAction="#handleAddFriend"/>
            <Label text="Your Friends"/>
            <ListView fx:id="friendsListView"/>
        </VBox>
    </children>
</AnchorPane>
