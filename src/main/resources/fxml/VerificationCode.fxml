<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="view.VerificationCodeController" spacing="10" alignment="CENTER"
      styleClass="logicPage">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Back" onAction="#handleBack"/>
    <Button text="Resend Code" onAction="#handleResend"/>
    <Label text="Enter Verification Code" style="-fx-font-size: 16px;"/>
    <TextField fx:id="codeField" promptText="Verification Code"/>
    <Button fx:id="verifyButton" text="Verify" onAction="#handleVerifyButtonAction"/>
</VBox>
